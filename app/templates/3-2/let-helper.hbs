{{!-- plain --}}
Welcome back, {{concat (capitalize person.firstName) ' ' (capitalize person.lastName)}}<br>
<br>
First Name: {{capitalize person.firstName}}<br>
Last Name: {{capitalize person.lastName}}<br>

<hr>

{{!-- #let helper --}}
{{#let (capitalize person.firstName) (capitalize person.lastName) as |firstName lastName| }}
  Welcome back, {{concat firstName " " lastName}}<br>
  <br>
  First Name: {{firstName}}<br>
  Last Name: {{lastName}}<br>
{{/let}}

<hr>

{{!-- #with helper --}}

{{#with (capitalize person.firstName) as |firstName| }}
  {{#with (capitalize person.lastName) as |lastName| }}
    {{!-- note: if either of these is null, this block will not be displayed --}}
    Welcome back, {{concat firstName ' ' lastName}}<br>
    <br>
    First Name: {{firstName}}<br>
    Last Name: {{lastName}}<br>
  {{/with}}
{{/with}}

